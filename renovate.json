{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommits"
  ],
  "reviewers": [
    "maxdymond"
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "azure_core_for_storage"
      ],
      "allowedVersions": "=0.21.0",
